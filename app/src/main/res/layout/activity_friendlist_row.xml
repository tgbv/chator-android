<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friendlistRowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1pt">

    <TextView
        android:id="@+id/friendlistRowUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Friend name here"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/btnSendMessage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnSendMessage"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/btn_green_ripple"
        app:layout_constraintEnd_toStartOf="@+id/btnSendMessage2"
        app:srcCompat="@android:drawable/ic_menu_send"
        tools:layout_editor_absoluteY="-3dp" />

    <ImageButton
        android:id="@+id/btnSendMessage2"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/btn_red_ripple"
        android:soundEffectsEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_delete"
        tools:layout_editor_absoluteY="-3dp" />
</androidx.constraintlayout.widget.ConstraintLayout>